@using Project_QuanAo.Models;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var maLoaiTK = Session["MaLoaiTK"];
    bool isAdmin = false;
    if (maLoaiTK != null && ((int)maLoaiTK == 2 || (int)maLoaiTK == 3))
    {
        isAdmin = true;
    }
    if (!isAdmin)
    {
        Response.Redirect(Url.Action("Index", "Home"));
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thêm nhà cung cấp</title>
    <link rel="stylesheet" href="~/Content/form.css">
</head>
<body>

    <div class="container">
        @if (ViewBag.Message != null)
        {
            <div class="alert">
                @ViewBag.Message
            </div>
        }

    <form action="@Url.Action("ThemNhaCungCap", "Admin")" method="post" enctype="multipart/form-data">
        <h1>Thêm nhà cung cấp</h1>

        <div class="form-group">
            <input type="text" required="required" name="TenNCC" />
            <label for="TenNhaCungCap" class="control-label">Tên nhà cung cấp *</label><i class="bar"></i>
        </div>
        <div class="form-group">
            <textarea required="required" name="DiaChi"></textarea>
            <label for="DiaChi" class="control-label">Địa chỉ</label><i class="bar"></i>
        </div>
        <div class="form-group">
            <input type="number" required="required" min="0" name="SDT" />
            <label for="SDT" class="control-label">Số điện thoại *</label><i class="bar"></i>
        </div>
        <div class="button-container">
            <button type="submit" class="button"><span>Submit</span></button>
        </div>
    </form>
    </div>
</body>
</html>
