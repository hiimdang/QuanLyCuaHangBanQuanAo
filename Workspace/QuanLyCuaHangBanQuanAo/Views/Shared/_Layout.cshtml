@{
    var maTK = Session["MaTK"];
    bool flag = false;
    if (maTK != null)
    {
        flag = true;
    }
    var maLoaiTK = Session["MaLoaiTK"];
    bool isAdmin = false;
    if (maLoaiTK != null && ((int)maLoaiTK == 2 || (int)maLoaiTK == 3))
    {
        isAdmin = true;
    }
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cửa hàng bán quần áo</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,...lay=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet">
    <link rel="icon" href="~/Content/favicon.png" type="image/png">
</head>

<body>
    <header>
        <nav>
            <div id="logo">
                <a href="@Url.Action("Index", "Home")" class="pointer-unset">
                    <svg width="40" height="32" viewBox="0 0 40 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                              d="M12.8 32H0V21.9849C0 17.1239 4.0116 13.1839 8.96 13.1839H15.2V0.468341C15.2 0.251458 15.3792 0.0754376 15.6 0.0754376C15.7184 0.0754376 15.8308 0.127301 15.9068 0.216883L17.3616 1.92719C18.402 1.07577 19.74 0.563816 21.2 0.563816H22C23.442 0.563816 24.7656 1.06359 25.8 1.89654L27.2932 0.14066C27.3692 0.0514706 27.4812 0 27.6 0C27.8208 0 28 0.175628 28 0.392904V15.3896H23.36C17.528 15.3896 12.8 20.0337 12.8 25.7623V32Z"
                              fill="#45413E" />
                        <path fill-rule="evenodd" clip-rule="evenodd"
                              d="M29.76 17.0569V12.0875C29.76 12.0836 29.76 12.0797 29.76 12.0758V6.79004C29.76 6.57435 29.9392 6.4 30.16 6.4C30.266 6.4 30.3676 6.44095 30.4424 6.51389L31.9576 7.98784C32.7864 7.42501 33.7936 7.09504 34.88 7.09504C35.97 7.09504 36.9808 7.42735 37.8112 7.99369L39.3176 6.52793C39.3924 6.45499 39.494 6.41404 39.6 6.41404C39.8208 6.41404 40 6.58878 40 6.80408V23.2632C40 28.0883 35.9884 32 31.04 32H14.4V25.7938C14.4 20.969 18.4116 17.0569 23.36 17.0569H29.76Z"
                              fill="#45413E" />
                    </svg>
                    Bảnh
                </a>
            </div>
            <ul class="navigation-menu">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                <li>
                    <a href="@Url.Action("DanhMuc", "SanPham")">Tất cả sản phẩm</a>
                </li>
                @*<li>
                    <a href="#locate">Danh mục hàng</a>
                </li>*@
                @*<li>
                    <a href="#">About Us</a>
                </li>*@
                @{
                    if (isAdmin)
                    {
                        <li>
                            <a href="@Url.Action("Index", "Admin")">Admin</a>
                        </li>
                    }
                    if (!flag)
                    {
                        <li>
                            <a href="@Url.Action("DangNhap","DangNhap")">Đăng nhập</a>
                        </li>
                    }
                }
            </ul>
            <div id="utility">
                <form action="@Url.Action("TimKiem", "SanPham")" method="get" id="searchForm">
                    <div class="flex-row">
                        <input type="text" name="tuKhoa" class="not-include search-bar" id="searchInp" />
                        <span id="searchInp"></span>
                        <span id="searchBtn" class="material-symbols-outlined search-icon pointer">search</span>
                        <a href="@Url.Action("Index", "GioHang")" class="pointer-unset">
                            <span class="material-symbols-outlined pointer">
                                shopping_cart
                            </span>
                        </a>
                        @if(flag){
                            <a href="@Url.Action("DangXuat", "DangNhap")" class="pointer-unset">
                                <span class="material-symbols-outlined pointer">
                                    logout
                                </span>
                            </a>
                        }
                    </div>
                </form>
            </div>
        </nav>
    </header>
    <div class="body">
        @RenderBody()
    </div>
    <footer>
        <ul>
            Sản phẩm
            <li><a href="#">Áo thun</a></li>
            <li><a href="#">Áo Polo</a></li>
            @*<li><a href="#">Food &amp; Treats</a></li>
                <li><a href="#">Toys</a></li>
                <li><a href="#">Beds &amp; Furniture</a></li>
                <li><a href="#">Outdoor Supplies</a></li>
                <li><a href="#">Clothing</a></li>
                <li><a href="#">Aquariums</a></li>
                <li><a href="#">Rocks &amp; Decorations</a></li>*@
        </ul>

        <ul>
            Brand 
            <li><a href="#">Outeriry</a></li>
            <li><a href="#">Badhabits</a></li>
            <li><a href="#">Yame</a></li>
            <li><a href="#">Dirtycoins</a></li>
        </ul>


        <ul>
            Dịch vụ
            <li><a href="@Url.Action("Index", "GioHang")">Giỏ hàng</a></li>
            <li><a href="@Url.Action("ThanhToan", "GioHang")">Thanh toán</a></li>
            @if (flag || (maLoaiTK as int? ?? 0) == 1)
            {
                <li><a href="@Url.Action("LichSuDonHang", "GioHang")">Lịch sử đơn hàng</a></li>
            }
        </ul>
        <ul>
            Bảnh Store
            <li><a href="#locate">Vị trí &amp; thời gian làm việc</a></li>
            <li><a href="#">About Us</a></li>
        </ul>


    </footer>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script>
        $('#searchBtn').on('click', function () {
            $text = $('#searchInp').val();
            if ($text.trim().length !== 0) {
                $('#searchForm').submit();
            } else {
                $('#searchInp').focus();
            }
        });
    </script>
</body>
</html>